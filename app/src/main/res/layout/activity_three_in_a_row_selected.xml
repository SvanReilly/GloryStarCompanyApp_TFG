<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/threeinarowselected"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ThreeInARowActivity"
    android:background="@drawable/gradient_background">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonBackThreeInARowToGames"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/back"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:background="@color/cardview_shadow_end_color"
            />
        <ImageView
            android:id="@+id/threeInARowActivitySelectedImageView"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            app:srcCompat="@drawable/tresenrayagame"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:background="@color/cardview_shadow_end_color"
            />

    </TableRow>




    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <ImageButton
        android:id="@+id/playThreeInARowSelectedImageButton"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        app:srcCompat="@drawable/jugar"
        android:scaleType="fitCenter"
        android:layout_weight="0.5"
        android:background="@color/cardview_shadow_end_color"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/difficultyThreeInARowSelectedImageButton"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        app:srcCompat="@drawable/dificultad"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="@color/cardview_shadow_end_color"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>


</androidx.appcompat.widget.LinearLayoutCompat>